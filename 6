import java.util.Scanner;


public class calculator {
	public static void main(String[] args){
		System.out.println(" select a number on your mind");
		
		Scanner bucky = new Scanner(System.in);
		double fnum, snum,tnum, answer;
		
		System.out.println("Enter first num: ");
		fnum = bucky.nextDouble();
		
		System.out.println(" your number * 2");
		System.out.println(" enter the different number and sum up this number with your last number ");
		
		System.out.println("Enter second num: ");
		snum = bucky.nextDouble();
		
		System.out.println(" your last number / 2");
		
		System.out.println(" your last number- your first number");
		
		System.out.println("Enter random and unnecessary num: ");
		tnum = bucky.nextDouble();
		
		System.out.println(" computer has already known the results ");
		
		answer = (((fnum * 2) + snum) / 2) - fnum;
		
		System.out.println(answer);
		
		System.out.println(" you always follow me and i am always one step in front of you. ");
	}
}
